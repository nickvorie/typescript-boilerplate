{
	"compilerOptions": {
		"baseUrl": "src",
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",

		"paths": {
			"@/*": ["*"]
		},

		"typeRoots": ["./node_modules/@types", "./src/types"]
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules", "test"]
}
